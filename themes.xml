<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.QuickPollApp" parent="Theme.Material3.Light.NoActionBar">

        <!-- Primary brand -->
        <item name="colorPrimary">@color/brown_500</item>
        <item name="colorOnPrimary">@color/pure_white</item>

        <!-- Secondary accent -->
        <item name="colorSecondary">@color/accent_warm</item>
        <item name="colorOnSecondary">@color/pure_white</item>

        <!-- Background -->
        <item name="android:colorBackground">@color/beige_50</item>

        <!-- Surface -->
        <item name="colorSurface">@color/cream_light</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/beige_100</item>

        <!-- Disable default action bar shadow -->
        <item name="android:windowLightStatusBar">true</item>

    </style>

    <style name="DrawerItemTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/brown_light</item>
    </style>

    <style name="DrawerSectionText">
        <item name="android:textColor">@color/brown_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>