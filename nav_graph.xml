<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.quickpollapp.ui.splash.SplashFragment"
        android:label="Splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_authFragment"
            app:destination="@id/authFragment" />
    </fragment>
    <fragment
        android:id="@+id/authFragment"
        android:name="com.example.quickpollapp.ui.auth.AuthFragment"
        android:label="Auth"
        tools:layout="@layout/fragment_auth" >
        <action
            android:id="@+id/action_authFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.quickpollapp.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_createPollFragment"
            app:destination="@id/createPollFragment" />
    </fragment>
    <fragment
        android:id="@+id/createPollFragment"
        android:name="com.example.quickpollapp.ui.create.CreatePollFragment"
        android:label="Create Poll"
        tools:layout="@layout/fragment_create_poll" >
        <action
            android:id="@+id/action_createPollFragment_to_pollDetailsFragment"
            app:destination="@id/pollDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/pollDetailsFragment"
        android:name="com.example.quickpollapp.ui.poll.PollDetailsFragment"
        android:label="Poll Details"
        tools:layout="@layout/fragment_poll_details" >
        <action
            android:id="@+id/action_pollDetailsFragment_to_analyticsFragment"
            app:destination="@id/analyticsFragment" />
    </fragment>
    <fragment
        android:id="@+id/analyticsFragment"
        android:name="com.example.quickpollapp.ui.analytics.AnalyticsFragment"
        android:label="Analytics"
        tools:layout="@layout/fragment_analytics" >
        <action
            android:id="@+id/action_analyticsFragment_to_myPollsFragment"
            app:destination="@id/myPollsFragment" />
    </fragment>
    <fragment
        android:id="@+id/myPollsFragment"
        android:name="com.example.quickpollapp.ui.mypolls.MyPollsFragment"
        android:label="My Polls"
        tools:layout="@layout/fragment_my_polls" >
        <action
            android:id="@+id/action_myPollsFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.quickpollapp.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.quickpollapp.ui.profile.EditProfileFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_edit_profile">
        <action
            android:id="@+id/action_editProfileFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
</navigation>